<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgoound2"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/Image_Logo"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/mini_logo" />

    <TextView
        android:id="@+id/title_recommendation"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginHorizontal="100px"
        android:background="#00D2F8EF "
        android:drawableStart="@drawable/recommm"
        android:hint="Recommendation"
        android:inputType="text"
        android:shadowColor="#D2F8EF"
        android:textColorHighlight="#FFEBCD"
        android:textColorHint="#202020"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bloodRes"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:textColorHint="#FFFFFF"
            android:background="#70FFC7DE"
            android:drawableStart="@drawable/blood2"
            android:hint="  Recommendations based on blood test results"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/urineRes"
            android:layout_width="300dp"
            android:textColorHint="#FFFFFF"
            android:layout_marginTop="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:background="#70FFC7DE"
            android:drawableStart="@drawable/urine2"
            android:hint="  Recommendations based on urine test results"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/generalInfo"
            android:layout_width="300dp"
            android:textColorHint="#FFFFFF"
            android:layout_marginTop="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:background="#70FFC7DE"
            android:drawableStart="@drawable/results"
            android:hint="  General recommendations by trimester"
            android:textSize="20dp"
            android:textStyle="bold" />













    </FrameLayout>



</LinearLayout>