<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marbel"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/Image_Logo"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        app:srcCompat="@drawable/mini_logo" />

    <TextView
        android:id="@+id/checkTestsType"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="timor"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        />


    <TextView
        android:id="@+id/theRecommendation"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
         android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/theRecommendation2"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/good"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:text="helpful"
      />

        <Button
            android:id="@+id/bad"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Not helpful"
            android:textAllCaps="false"
            android:textColor="#000000"
            />


    </LinearLayout>





    <TextView
        android:id="@+id/warning"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#ff4d4d"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:text="**The content provided is intended to provide general medical and health information and does not constitute medical advice, professional opinion, or a substitute for consulting with a qualified professional as appropriate, on a personal and individual basis."
        />

    <ListView
        android:id="@+id/listViewId2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="invisible"

        android:textAlignment="center" />


    <TextView
        android:id="@+id/check3"
        android:layout_marginTop="19dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#00000000"
        android:text=""
        />

    <TextView
        android:id="@+id/check4"
        android:layout_marginTop="19dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#00000000"
        android:text="timor"
        />


</LinearLayout>