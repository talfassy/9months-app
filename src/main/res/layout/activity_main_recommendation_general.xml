<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/babylegs"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/Image_Logo"
        android:layout_width="160dp"
        android:background="#00D2F8EF"
        android:layout_height="100dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/mini_logo" />

    <TextView
        android:id="@+id/title_qa"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginHorizontal="100px"

        android:background="#00D2F8EF "
        android:hint="  General Recommendation"
        android:inputType="text"
        android:shadowColor="#D2F8EF"
        android:textColorHighlight="#FFEBCD"
        android:textColorHint="#202020"
        android:textSize="20dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/first"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:textColorHint="#FFFFFF"
            android:background="#70FFC7DE"
            android:hint="First Trimester"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/second"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:layout_marginTop="80dp"
            android:background="#70FFC7DE"
            android:hint="Second Trimester"
            android:textColorHint="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/third"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:layout_marginTop="160dp"
            android:background="#70FFC7DE"
            android:hint="Third Trimester"
            android:textColorHint="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />





    </FrameLayout>



</LinearLayout>