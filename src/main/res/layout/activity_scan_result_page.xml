
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scanResultPage">

    <com.wonderkiln.camerakit.CameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/camView"
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:textColor="#00000000"
            android:text=" " />
    </com.wonderkiln.camerakit.CameraView>



    <Button
        android:id="@+id/IdentifyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Identify"
        android:textSize="18dp"
        android:background="#80ffb3b3"
        android:layout_marginTop="550dp"/>

    <Button
        android:id="@+id/Decipher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decipher the results"
        android:textSize="18dp"
        android:layout_marginTop="600dp"
        android:background="#80ffb3b3"
        />

    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:background="#80ffb3b3"
        android:layout_height="wrap_content"
        android:textAlignment="center"
android:layout_gravity="center_horizontal"

        android:textColor="#000000"
        android:textSize="18dp"
        android:text="press the Identify button once and wait for camera stabilization. When the camera stabilizated and got the image the taken data are marked in red."
        />
    <com.first.a9monthsproject.GraphicUtils.GraphicOverlay
        android:id="@+id/graphicOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />
</FrameLayout>

