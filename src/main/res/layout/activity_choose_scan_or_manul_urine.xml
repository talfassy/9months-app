<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marbel"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/Image_Logo"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:shadowColor="#D2F8EF"
        app:srcCompat="@drawable/mini_logo" />

    <TextView
        android:id="@+id/chooseTestsType"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:text="Please choose the way you want to enter the results:"/>



    <Button
        android:id="@+id/scan"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="#60ff99bb"
        android:layout_gravity="center_horizontal"
        android:hint="Scan result"
        android:textSize="18dp"
        android:drawableStart="@drawable/camera3"
        android:textColorHint="#000000" />



    <Button
        android:id="@+id/manual"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:drawableStart="@drawable/manually"
        android:textSize="18dp"
        android:background="#60ff99bb"
        android:hint="Add results manually"
        android:textColorHint="#000000" />


    <TextView
        android:id="@+id/watchBloodTestInfo2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text=" For general urine test information
        and possible results click here"
        />



</LinearLayout>