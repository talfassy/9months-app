<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marbel"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/Image_Logo"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="25dp"
        android:background="#00000000"
        android:shadowColor="#D2F8EF"
        app:srcCompat="@drawable/mini_logo" />

    <TextView
        android:id="@+id/bloodTestsResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:text="My blood tests results:" />

    <TextView
        android:id="@+id/info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textColor="#ff4d4d"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="For decoding click on the relevant test"
        android:layout_gravity="center_horizontal"/>

    <ListView
        android:id="@+id/listViewId"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="#70ffb3b3"
        android:layout_height="130dp">


        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Glucose"
                    android:layout_width="350dp"
                    android:layout_height="60sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Glucose_rec"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="watch recommendations"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/WBC"
                    android:layout_width="350dp"
                    android:layout_height="60sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/WBC_rec"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="watch recommendations"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/RBC"
                    android:layout_width="350dp"
                    android:layout_height="60sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/RBC_rec"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="watch recommendations"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/Hemoglobin"
                    android:layout_width="350dp"
                    android:layout_height="60sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Hemoglobin_rec"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="watch recommendations"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/Hematocrit"
                    android:layout_width="350dp"
                    android:layout_height="60sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Hematocrit_rec"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="watch recommendations"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/MCV"
                    android:layout_width="350dp"
                    android:layout_height="60sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/MCV_rec"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="watch recommendations"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/MCH"
                    android:layout_width="350dp"
                    android:layout_height="70sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/MCH_rec"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="watch recommendations"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/MCHC"
                    android:layout_width="350dp"
                    android:layout_height="70sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/MCHC_rec"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="watch recommendations"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/RDW"
                    android:layout_width="350dp"
                    android:layout_height="60sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/RDW_rec"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="watch recommendations"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/Platelets"
                    android:layout_width="350dp"
                    android:layout_height="60sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/platelets_rec"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="watch recommendations"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/MPV"
                    android:layout_width="350dp"
                    android:layout_height="60sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/MPV_rec"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="watch recommendations"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />



            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


    <TextView
        android:id="@+id/warning"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#ff4d4d"
        android:layout_marginTop="10dp"
     android:layout_marginLeft="20dp"

        android:text="**The decoding does not constitute medical advice, professional opinion, or a substitute for consulting
        with a qualified professional."
        />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="return to test page"
        android:textAllCaps="false"
        android:background="#60000000"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        />




</LinearLayout>