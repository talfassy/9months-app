<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marbel"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/Image_Logo"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:shadowColor="#D2F8EF"
        app:srcCompat="@drawable/mini_logo" />

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="22dp"
        android:layout_gravity="center_horizontal"
        android:text="Recommendations for blood test results-"
        />

    <TextView
        android:id="@+id/enterInfo"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:textColor="#0000FF"
        android:layout_marginTop="20dp"

        android:textAllCaps="false"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:text="Please type the name of the test for which you would like to receive a recommendations:"
        />


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/enterName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Test name"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            />

        <ImageButton
            android:id="@+id/viewrecommendations"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/eye"
            android:textSize="20dp"
            android:background="#00FFC0CB"
            android:textAlignment="center"
            />


    </LinearLayout>



    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >


            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:orientation="vertical">



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/worngInput"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:paddingTop="5dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/recommendations"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="35dp"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:paddingTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="18dp" />





                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>



</LinearLayout>
